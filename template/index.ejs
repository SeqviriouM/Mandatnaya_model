            <input type="text" class="form-control" id="login" name="login" placeholder="Username">
    			</div>
    			<div class="col-sm-2">
    				<button type="submit" class="btn btn-success">Войти</button>
    			</div>
  			</div>
  
		</form>

    </div><!-- /.container -->


